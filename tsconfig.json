{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "target": "es5",
    "outDir": "release/src",
    "rootDir": "./src",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
    ]
  },
  "exclude": [
    "src/**/*.test.ts",
    "node_modules",
    "release"
  ]
}
