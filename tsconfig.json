{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "target": "es3",
    "outDir": "release/es5",
    "rootDir": "./src",
    "sourceMap": true,
    "importHelpers": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
    ],
    "paths": {
      "spritespin": ["./spritespin"]
    }
  },
  "exclude": [
    "node_modules",
    "release",
    "*.test.ts"
  ]
}
